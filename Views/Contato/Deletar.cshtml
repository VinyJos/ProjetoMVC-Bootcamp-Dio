@model ProjetoMVC.Models.Contato

@{
    ViewData["Title"] = "Deletar contato";
}

<h2>Deseja realmente deletar esse contato? Essa operação é irreversível !</h2>

<div>
    <!--Definicion list-->
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(x => x.Nome)
        </dt>
        <dt class="col-sm-10">
            @Html.DisplayFor(x => x.Nome)
        </dt>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(x => x.Telefone)
        </dt>
        <dt class="col-sm-10">
            @Html.DisplayFor(x => x.Telefone)
        </dt>
         <dt class="col-sm-2">
            @Html.DisplayNameFor(x => x.Ativo)
        </dt>
        <dt class="col-sm-10">
            @Html.DisplayFor(x => x.Ativo)
        </dt>
    </dl>
</div>
<!-- vai chamar a ação da controller-->
<form asp-action="Deletar">
    <input type="submit" value="Deletar" class="btn btn-danger"/>
    <a asp-action="Index" class="btn btn-primary">Voltar</a>
</form>